{
  "version": "0.1.3",
  "license": "MIT",
  "name": "@rppld/crowdin-cli",
  "author": "Philipp Rappold <philipp.rappold@mollie.com>",
  "main": "dist/index.js",
  "module": "dist/crowdin-test.esm.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "mollie-crowdin": "bin/mollie-i18n"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch -i src/cli.ts --target node",
    "build": "tsdx build -i src/cli.ts --target node",
    "test": "tsdx test",
    "lint": "tsdx lint src tests",
    "prepare": "yarn build",
    "tsc:check": "tsc --noEmit"
  },
  "dependencies": {
    "@crowdin/crowdin-api-client": "1.15.2",
    "@formatjs/cli-lib": "^6.3.3",
    "axios": "^0.21.3",
    "chalk": "^4.0.0",
    "commander": "^7.0.0",
    "dotenv": "^8.2.0",
    "glob": "^10.3.10",
    "mkdirp": "^1.0.4",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/mkdirp": "^1.0.1",
    "@types/shelljs": "^0.8.8",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tsc:check"
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "./tests/setup.ts"
    ]
  },
  "description": "A little helper to sync messages with [Crowdin](https://crowdin.com/). It uses [`@formatjs/cli`](https://formatjs.io/docs/tooling/cli/) to extract messages from your application.",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rppld/crowdin-cli.git"
  },
  "bugs": {
    "url": "https://github.com/rppld/crowdin-cli/issues"
  },
  "homepage": "https://github.com/rppld/crowdin-cli#readme"
}
